@{
}


<h1 class="text-center text-primary">Edit Instructor</h1>

@using (Html.BeginForm("EditDb", "htmlhelper", FormMethod.Post))
{

    @Html.LabelFor(m=>m.Name,new {@class = "form-label"})
    @Html.TextBoxFor(m=>m.Name,new {@class = "form-control"})

    @Html.LabelFor(m=>m.Age)
    @Html.EditorFor(m=>m.Age,new{HtmlAttributes= new{@class = "form-control"}})

    @Html.LabelFor(m=>m.Salary)
    @Html.EditorFor(m=>m.Salary,new{HtmlAttributes= new{@class = "form-control"}})

    @Html.LabelFor(m=>m.crsId)
    @Html.DropDownListFor(m=>m.crsId,Model.courses,"choose one",new {@class = "form-control"})


    <input type="submit" value="Edit"/>
}