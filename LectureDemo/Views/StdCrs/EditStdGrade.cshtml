@{
}


<h1>Edit student course grade</h1>

<form asp-action="EditStdGrade" asp-controller="stdCrs" method="post">

    <div class="form-group">
        <label asp-for="StdId"></label>
        <select asp-for="StdId" asp-items="ViewBag.Students" class="form-control">
            <option>Choose student</option>
        </select>
    </div>
    <div class="form-group" id="coursesArea">
        <partial name="_CoursesList" model="Model"></partial>
    </div>

    <input type="submit" value="Edit" />
</form>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/js/EditStdCrsGrade.js"></script>
}