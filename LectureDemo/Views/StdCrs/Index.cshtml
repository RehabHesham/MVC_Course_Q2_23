@{
    int i = 1;
}

@model List<StudentCourse>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>student Name</th>
            <th>course Name</th>
        </tr>
    </thead>
        @foreach (var studentCourse in Model)

        {
            <tr>
        <td>@(i++)</td>
        <td>@studentCourse.std.Name</td>
        <td>@studentCourse.crs.Name</td>
        </tr>
        }
    </tbody>
</table>
